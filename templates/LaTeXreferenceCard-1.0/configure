echo "****If packages are missing under GNU/Linux using rpm run"
echo "yum install make texlive texinfo-tex texlive-collection-basic texlive-collection-latex dvi2ps linkchecker aspell ImageMagick zip unzip tar diction tex4ht"
echo
echo "****If packages are missing under GNU/Linux using dnf run"
echo "dnf install make texlive texinfo-tex texlive-collection-basic texlive-collection-latex dvi2ps linkchecker aspell ImageMagick zip unzip tar diction tex4ht"
echo
echo "****If packages are missing under GNU/Linux using zypper run"
echo "sudo zypper install make texlive dvi2ps aspell linkchecker imagemagick zip unzip tar tex4ht"
echo
echo "****For Windows Cygwin systems install the following packages"
echo "texlive dvi2ps aspell linkchecker ImageMagick zip unzip tar diction tex4ht make"
